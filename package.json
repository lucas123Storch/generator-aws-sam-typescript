{
  "name": "generator-aws-sam-typescript",
  "version": "0.1.0",
  "description":
    "Generates a project for creating a serverless application on AWS, using the AWS SAM methodology",
  "homepage": "https://github.com/pha3l/generator-aws-sam-typescript",
  "author": {
    "name": "Luke Merry",
    "email": "lmerry@gmail.com",
    "url": "https://github.com/pha3l"
  },
  "files": ["generators"],
  "main": "generators/index.js",
  "keywords": ["aws", "sam", "awssam", "typescript", "yeoman-generator"],
  "devDependencies": {
    "eslint": "^4.1.0",
    "eslint-config-prettier": "^2.4.0",
    "eslint-config-xo": "^0.18.2",
    "eslint-plugin-prettier": "^2.2.0",
    "husky": "^0.14.3",
    "jest": "^22.0.6",
    "lint-staged": "^4.2.1",
    "nsp": "^2.6.3",
    "prettier": "^1.7.0",
    "yeoman-assert": "^3.1.0",
    "yeoman-test": "^1.7.0"
  },
  "dependencies": {
    "chalk": "^2.1.0",
    "mkdirp": "^0.5.1",
    "yeoman-generator": "^2.0.1",
    "yosay": "^2.0.1"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "scripts": {
    "prepublish": "nsp check",
    "pretest": "eslint .",
    "precommit": "lint-staged",
    "test": "jest"
  },
  "lint-staged": {
    "*.js": ["eslint --fix", "git add"],
    "*.json": ["prettier --write", "git add"]
  },
  "eslintConfig": {
    "extends": ["xo", "prettier"],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "printWidth": 90
        }
      ]
    },
    "plugins": ["prettier"]
  },
  "repository": "pha3l/generator-aws-sam-typescript",
  "license": "MIT"
}
